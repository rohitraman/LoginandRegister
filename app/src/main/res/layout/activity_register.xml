<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/download">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:id="@+id/tv_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Sign Up"
        android:textColor="@color/White"
        android:textStyle="italic|bold"
        android:textSize="25dp"/>

    <EditText
        android:id="@+id/et_name"
        android:layout_width="1000px"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Name"
        android:textColorHint="@color/White"
        android:backgroundTint="@color/White"
        android:textColor="@color/White"
        android:layout_below="@+id/tv_signup"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:backgroundTint="@color/White"
        android:textColor="@color/White"
        android:inputType="textPersonName"
        android:hint="Username"
        android:textColorHint="@color/White"
        android:layout_below="@+id/et_email"
        android:layout_alignLeft="@+id/et_email"
        android:layout_alignStart="@+id/et_email"
        android:layout_alignRight="@+id/et_email"
        android:layout_alignEnd="@+id/et_email" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:backgroundTint="@color/White"
        android:textColorHint="@color/White"
        android:inputType="textPassword"
        android:hint="Password"
        android:layout_below="@+id/et_username"
        android:layout_alignLeft="@+id/et_username"
        android:layout_alignStart="@+id/et_username"
        android:textColor="@color/White"
        android:layout_alignRight="@+id/et_username"
        android:layout_alignEnd="@+id/et_username" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_name"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_alignRight="@+id/et_name"
        android:layout_alignEnd="@+id/et_name"
        android:layout_alignLeft="@+id/et_name"
        android:layout_alignStart="@+id/et_name"
        android:backgroundTint="@color/White"
        android:hint="Email"
        android:textColorHint="@color/White"
        android:textColor="@color/White"
        />

        <Button
            android:id="@+id/btn_singup"
            style="@android:style/Widget.DeviceDefault.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/et_password"
            android:layout_alignLeft="@+id/et_password"
            android:layout_alignRight="@+id/et_password"
            android:layout_alignStart="@+id/et_password"
            android:layout_below="@+id/et_password"
            android:layout_marginTop="30dp"
            android:text="Sign Up"
            android:textStyle="italic|bold" />
    </RelativeLayout>
</ScrollView>